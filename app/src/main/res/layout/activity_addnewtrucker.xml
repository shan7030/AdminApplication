<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.example.shantanu.adminapplication.Addnewtrucker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="WARD NAME :"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/wardname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="FIRST NAME"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/fname1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="LAST NAME"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/lname1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="AGE"
                />
            <EditText
                android:id="@+id/age1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="ID:"
                />
            <EditText
                android:id="@+id/idofdriver"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ADDRESS"/>

        <EditText
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/blackborder"
            android:paddingLeft="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="CONTACT NUMBER"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/contact1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/blackborder"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ADD E-Truck driver"
            android:layout_gravity="right"
            android:onClick="addtrucker"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
